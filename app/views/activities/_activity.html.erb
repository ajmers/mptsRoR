<ul class = "activities" >
	<li class = "activity_item">
		<div class = "activity_content">
			<span class="delete"><%= link_to activity, method: :delete do %>
				&#10006
				<% end %> 
			</span>
			<%= link_to activity_path(activity.id) do %> 
			<span class="content"><%= activity.content %><span>
			<span class="timestamp"><%= time_ago_in_words(activity.created_at) %> ago</span>
			<% end %>
		</div>
		<div class="activity_points"><% if activity.num_times_ranked.to_i >= 5 %>
				<%= activity.avg_score.round(1) %> 
				<% else %>
				<span class="pending">waiting for votes</span>
				<% end %>
		</div>
	</li>
</ul>
