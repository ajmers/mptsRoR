<%= form_for(@user) do |f| %>

<h3><%= f.label :email %></h3>
<p><%= f.text_field :email %></p>

<h3><%= f.label :password %></h3>
<p><%= f.password_field :password %></p>

<h3><%= f.label :password_confirmation, "Confirm Password" %></h3>
<p><%= f.password_field :password_confirmation %></p>

<%= f.submit "Create my account", class: "mybutton" %>
<% end %>